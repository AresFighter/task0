<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="334.0" prefWidth="417.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo3.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <FlowPane alignment="CENTER" prefHeight="65.0" prefWidth="187.0">
        <children>
            <Label prefHeight="18.0" prefWidth="102.0" text="Введите сумму:" />
            <TextField fx:id="summa" prefHeight="26.0" prefWidth="102.0" />
        </children>
    </FlowPane>

    <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="258.0" spacing="10.0">
        <children>
            <Button fx:id="mal_ch" mnemonicParsing="false" onAction="#mal_chai" prefHeight="25.0" prefWidth="161.0" style="-fx-background-color: fa865c; -fx-background-radius: 15;" text="Маленькие (3%)" />
            <Region prefWidth="10" />
            <Label fx:id="mal" prefHeight="20.0" prefWidth="178.0" style="-fx-border-color: #828282; -fx-border-radius: 5;" text="Расчёт" textAlignment="CENTER" />
        </children>
    </HBox>

    <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="258.0" spacing="10.0">
        <children>
            <Button fx:id="sred_ch" mnemonicParsing="false" onAction="#sred_chai" prefHeight="26.0" prefWidth="161.0" style="-fx-background-color: #5c89fa; -fx-background-radius: 15;" text="Обычные (10%)" />
            <Region prefWidth="10" />
            <Label fx:id="sred" prefHeight="18.0" prefWidth="180.0" style="-fx-border-color: #828282; -fx-border-radius: 5;" text="Расчёт" textAlignment="CENTER" />
        </children>
    </HBox>

    <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="258.0" spacing="10.0">
        <children>
            <Button fx:id="big_ch" mnemonicParsing="false" onAction="#big_chai" prefHeight="26.0" prefWidth="160.0" style="-fx-background-color: #33a146; -fx-background-radius: 15;" text="Большие (15%)" />
            <Region prefWidth="10" />
            <Label fx:id="big" prefHeight="18.0" prefWidth="180.0" style="-fx-border-color: #828282; -fx-border-radius: 5;" text="Расчёт" />
        </children>
    </HBox>
</VBox>
